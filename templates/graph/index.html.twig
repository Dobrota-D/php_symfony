{% extends 'base.html.twig' %}

{% block title %}Hello GraphController!{% endblock %}

{% block body %}
<style>
    /* Bar Graph Horizontal */
    .bar-graph-horizontal {
        max-width: 380px;
        display: flex;
        flex-direction: column;
    }

    .bar-graph-horizontal > div {
        float: left;
        margin-bottom: 8px;
        width: 100%;
    }

    .bar-graph-horizontal .debt {
        float: left;
        margin-top: 18px;
        width: 50px;
    }

    .bar-graph-horizontal .bar {
        border-radius: 3px;
        height: 55px;
        float: left;
        overflow: hidden;
        position: relative;
        width: 0;
    }

    .bar-graph-one .bar > div::after {
        color: #fff;
        content: attr(data-percentage);
        font-weight: 700;
        position: absolute;
        right: 16px;
        top: 17px;
    }
</style>

    <section class="bar-graph bar-graph-horizontal bar-graph-one">

    {% for key, value in data %}

        <div class="bar" id="{{key}}" style="width:{{value.prop}}%; background-color:{% if value.isDebt %} red {% else %} green {% endif %}">
            <span class="debt">{{key}}</span>
            <div data-percentage="{{value.amount}}"></div>
        </div>

    {% endfor %}
        
    </section>

{% endblock %}
